Math.min(10,30,2,50)
Math.round(1.7)	2
Math.round(1.3)	1
Math.ceil(1.3)	2
Math.floor(1.7)	1 == parseInt(1.7)
Math.floor(Math.random()*45+1)


▶Option("text","value")
<select>의 option을 javascript 함수 option()으로  넣기
▷주요 함수
myform.first.option[0] = new Option("선택");	//option에 value값 넣기
myform.first.selectedIndex
myform.first[index].value
myform.first.text

javascript로 <select>의 option 설정하기
-
	<script type="text/javascript">
	function init(){
		var f_sel = myform.first; //form없이 select만 써주면 안됨 형식임
		f_sel.options[0] = new Option("선택"); //option배열 설정 ★

		for(var i=0;i<f_arr.length;i++){
			f_sel.options[i+1] = new Option(f_arr[i]); //text,value같으면 하나만 쓰면 됨
			//f_sel.options[i+1] = new Option(f_arr[i],f_arr[i]);
		}
		
		var s_sel = myform.second;
		s_sel.options[0] = new Option("선택");
	}//init()
	
	
	function secondChange(){
		f_sel = myform.first;
		s_sel = myform.second;
		
		f_selIndex = f_sel.selectedIndex;
		f_selValue = f_sel[f_selIndex].value;
		s_selIndex = s_sel.selectedIndex;
		s_selValue = s_sel[f_selIndex].value;
		
		var area = document.getElementById("result"); ★
		area.innerHTML = "선택한 메뉴는<br>"+f_selValue+","+s_selValue+"입니다.";
	}//secondchange

---------------------------------------
	<body onLoad="init()"> <!-- body 영역에 document 호출이 될때 (시작하자마자) 바로 실행됨 -->
		<form name="myform">
			<select id="first" style="width:100px" onChange="firstChange()"></select>
			<select id="second" style="width:100px" onChange="secondChange()"></select>
		</form>

		<div id="result"></div>
	</body>


<!-- size="10"가 보일정도로 maxlength="11"글자 내 -->

cf) html
<form>-<select>-<option> 한 쌍
선택시 name에 selected된 value값이 들어감


▶String
var str = "즐거운 자바스크립트 공부"; == new String("즐거운 자바스크립트 공부")
str.charAt(4)		자
str.indexOf("자바")      4
str.indexOf("HTML")	없으면 -1

str.slice(4,6)		자바
str.slice(4,-3)		음수는 맨뒤에서부터 => 자바스크립트 	!=substring() 음수 못씀
slice(4)		index4부터 자바스크립트 공부

str.substring(4,6)	자바
str.substr(4,6)		4부터 6글자가져옴 =>자바스크립트

str.toLowerCase()
str.toLowerCase()

