▶함수 만들기
-
	<script type="text/javascript">
	  function summer(check){  		//summer함수 정의 //(자료형안씀)check변수
	    if(check==true){
	     alert("여름은 더운 계절입니다");
	    }else{
	      alert("여름은 시원한 계절입니다");
	    }
	  }
	</script>

	<body>
	  <h2>여름은 더운 계절입니까?</h2>
	  <form> <!-- jsp -->
	    <input type="button" value="예" onClick="summer(true)"> <!-- summer 함수 호출 -->
	    <input type="button" value="아니오" onClick="summer(false)">
	  </form>
	<body>


