});

▶attr('속성')
:속성 가져오기

▶removeAttr('속성')
:속성 지우기

▶eq(인덱스)
:객체의 인덱스번째 ==$('선택자:eq(인덱스))

▶click(function(){})
:클릭 할때마다 function 실행

▶
removeClass('클래스')
:내장 방식으로 css되어 있는 클래스 삭제

remove('선택자')
:선택자의 영역 자체가 사라짐

▶
toggle() == style="display: none"
:객체를 토글할 때
toggle('slow');  'slow' 'fast' 5000

hasClass_toggle
$('p.a').click(function(){ /* p 태그 중에 a 클래스 */
//alert('2');
$('p.b').toggle('slow'); //'slow' 'fast' 5000
});

