chap4 태그에 태그 추가/삭제

▶배열 뽑아 태그에 자식으로 추가
$(arr).each(function(index,value){})
$(arr).each(function(index){})
:배열객체의 길이만큼 반복하며 index와 value 꺼내옴
$(function(){
var fruits = ['apple','banana','orange'];

$(fruits).each(function(index,value){
$('#fruit_list').append('<li>'+index+':'+value+'</li>');
}); 

}); 

▶자식으로 추가
append('추가할 내용') :자식으로 추가    순서대로 쌓임	cf)html() :태그 추가(누적안됨)
appendTo('타겟')

preppend('추가할 내용') :자식으로 추가  최신순으로 쌓임
preppendTo('타겟')

▶형제로 추가
before('추가할 내용') :앞쪽으로 형제로 추가
insertBefore('타겟')

after('추가할 내용') :뒤쪽으로 형제로 추가
insertAfter('타겟')

▶자식 태그 삭제
empty() 
:객체 안에 있는 자식만 없어짐
remove() 
:객체 안에 있는 자식 없어짐 +객체 포함해서 삭제됨

---
예제) 테이블 만들어 태그에 자식으로 추가
		var str = "<table border ='1'>";
		for (var i = 0; i < row; i++) {
				str += "<tr>";
				for (var j = 0; j < col; j++) {
					str += "<td><img src='./../images/"+arr[parseInt(Math.random()*4)+1]+"' width='100' height='100'>";
					str += "</td>";
				}
				str += "</tr>";
		}
		str += "</table>";
			
		//$('table').html(str); ==
		$('table').empty();
		$('table').append(str);
		
