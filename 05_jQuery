▷getJSON('요청url',success)
$.getJSON('item.json',function(data,textStatus){
alert(data);
//[object Object],[object Object],[object Object],[object Object],[object Object],[object Object]
//item.json파일에 있는 모든 객체 가져옴
alert(textStatus); //success
});

