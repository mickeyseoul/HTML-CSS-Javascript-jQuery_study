Javascript 01_Basic
Ex_11

<style type="text/css">
	table{
		margin: auto; /* 가운데 정렬됨 */
		border: 1px solid black;
		border-collapse: collapse; /*  */
		width: 800px;
		text-align: center;
		
	}
	th{ /* tr:nth-child(1) */
		border: 1px solid black;
		background-color: pink;
		padding: 5px;
	}
	td{
		border: 1px solid black;
		/* text-align: center; */
		padding: 5px;
	}
	
</style>
<script type="text/javascript">
	var flag = true;
	document.write("<table>");
	for (var i = 1; i <= 9; i++) { /* 천천히 열  */
		document.write("<tr>");
		for (var j = 2; j <= 9; j++) {/* 빠르게 행 */
			if (flag==true) {
				document.write('<th>');
				document.write(j + "단");
				document.write("</th>");
			} else {
				document.write("<td>" + j + "x" + i + "=" + j * i + "</td>");
			}
			if (j == 9) {
				document.write("</tr>");
				flag = false;
			}
		}

	}
	document.write("</table>");
  </script>
  
