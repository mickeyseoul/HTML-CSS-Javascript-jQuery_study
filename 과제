Javascript 01_Basic
Ex_11

<style type="text/css">
	table{
		border: 1px solid black;
		border-collapse: collapse; /*  */
		width: 800px;
		
	}
	th{
		border: 1px solid black;
		background-color: pink;
		padding: 5px;
	}
	td{
		border: 1px solid black;
		text-align: center;
		padding: 5px;
	}
	
</style>
<script type="text/javascript">
	var count = 0;
	document.write("<table>");
	for (var i = 1; i <= 9; i++) { /* 천천히 열  */
		count++;
		document.write("<tr>");
		for (var j = 2; j <= 9; j++) {/* 빠르게 행 */
			if (count == 1) {
				document.write('<th>');
				document.write(j + "단");
				document.write("</th>");
			} else {
				document.write("<td>" + j + "x" + i + "=" + j * i + "</td>");
			}
			if (j == 9) {
				document.write("</tr>");
			}
		}

	}
	document.write("</table>");
  </style>
  
  
