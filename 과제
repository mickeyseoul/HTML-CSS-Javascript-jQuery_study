Javascript 01_Basic
Ex_07

<script type="text/javascript">

	var kor = prompt("국어 접수 입력하세요."," ");
	var eng = prompt("영어 접수 입력하세요."," ");
	var math = prompt("수학 접수 입력하세요."," ");
	
	var sum = eval(kor)+eval(eng)+eval(math);
	document.write("합계:"+sum+"<br>");
	var avg = sum/3;
	document.write("평균:"+avg+"<br>"); 
	document.write("평균(반올림):"+Math.round(avg)+"<br>");
	
	if(eval(kor)>=90){
		document.write("A학점<br>");
	}else if(eval(kor)>=80){
		document.write("B학점<br>");
	}else if(eval(kor)>=70){
		document.write("C학점<br>");
	}else{
		document.write("조금 더 노력하세요.")
	}
	
	if(eval(eng)>=90){
		document.write("A학점<br>");
	}else if(eval(eng)>=80){
		document.write("B학점<br>");
	}else if(eval(eng)>=70){
		document.write("C학점<br>");
	}else{
		document.write("조금 더 노력하세요.")
	}
	
	if(eval(math)>=90){
		document.write("A학점<br>");
	}else if(eval(math)>=80){
		document.write("B학점<br>");
	}else if(eval(math)>=70){
		document.write("C학점<br>");
	}else{
		document.write("조금 더 노력하세요.")
	}
	
</script>

